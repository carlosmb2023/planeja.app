# Configurações do Banco de Dados
DATABASE_URL="postgresql://usuario:senha@localhost:5432/planeja_db"

# Chave secreta JWT (gere uma chave segura)
JWT_SECRET="sua-chave-jwt-super-secreta-aqui"

# Ambiente de execução
NODE_ENV="development"

# Porta do servidor
PORT=5000

# Configurações de Upload
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="uploads"

# Configurações Open Banking (quando implementado)
OPEN_BANKING_CLIENT_ID=""
OPEN_BANKING_CLIENT_SECRET=""
OPEN_BANKING_REDIRECT_URI=""

# Configurações de Email (SendGrid)
SENDGRID_API_KEY=""
FROM_EMAIL="noreply@planeja.com.br"
FROM_NAME="Planeja"

# Configurações de Cache (futuro)
REDIS_URL=""

# URL da aplicação
APP_URL="http://localhost:5000"

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de 2FA
TOTP_ISSUER="Planeja"
BACKUP_CODES_COUNT=10
